{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["--runInBand", "--watchAll"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "name": "Debug Content Script (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "chrome:://extensions",
      "webRoot": "${workspaceFolder}/dist",
      "sourceMaps": true
    },
    {
      "name": "Debug React Panel",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src/panel",
      "sourceMaps": true
    }
  ]
}
